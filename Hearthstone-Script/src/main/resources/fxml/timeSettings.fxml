<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="club.xiaojiawei.hsscript.controller.javafx.TimeSettingsController"
         fx:id="rootPane"
         stylesheets="@css/tableview.css, @css/timeSettings.css"
         tabClosingPolicy="UNAVAILABLE"
         prefHeight="600.0" prefWidth="1000.0"
         styleClass="tab-pane-ui">
    <Tab text="定义规则">
        <HBox spacing="10">
            <VBox spacing="5" alignment="CENTER" style="-fx-padding: 15;" HBox.hgrow="ALWAYS">
                <TableView fx:id="timeRuleSetTable" VBox.vgrow="ALWAYS"
                           styleClass="table-view-idea, table-view-idea-tiny, table-view-idea-upright">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="noSetCol" text="#" minWidth="20" maxWidth="20"/>
                        <TableColumn fx:id="nameSetCol" text="名字" minWidth="100" maxWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
            <VBox spacing="5" alignment="CENTER" style="-fx-padding: 15;" HBox.hgrow="ALWAYS">
                <TableView fx:id="selectedTimeRuleTable" VBox.vgrow="ALWAYS"
                           styleClass="table-view-idea, table-view-idea-tiny, table-view-idea-upright">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="selectedTimeCol" text="时间" minWidth="170" maxWidth="170"/>
                        <TableColumn fx:id="selectedAfterOperationCol" text="完成后执行"/>
                    </columns>
                </TableView>
            </VBox>
            <VBox spacing="5" alignment="CENTER" style="-fx-padding: 15;" HBox.hgrow="ALWAYS">
                <TableView fx:id="allTimeRuleTable" VBox.vgrow="ALWAYS"
                           styleClass="table-view-idea, table-view-idea-tiny, table-view-idea-upright">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="allTimeCol" text="时间" minWidth="170" maxWidth="170"/>
                        <TableColumn fx:id="allAfterOperationCol" text="完成后执行"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </Tab>
    <Tab text="设置时间">
        <graphic>

        </graphic>
    </Tab>

</TabPane>
